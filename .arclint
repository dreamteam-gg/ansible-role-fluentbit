{
  "linters": {
    "yamllint": {
      "type": "script-and-regex",
      "include": "(\\.(yaml|yml)$)",
      "script-and-regex.script": "sh -c '/usr/bin/yamllint -f parsable \"$0\" || true'",
      "script-and-regex.regex": "/^(?P<file>[A-z0-9-_\\.\\/]+):(?P<line>[0-9]+):(?P<char>[0-9]+):\\s\\[(?P<severity>[a-z]+)\\]\\s(?P<message>.*)$/m"
    }
 }
}
